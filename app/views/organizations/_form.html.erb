<%= simple_form_for(@organization) do |f| %>
  <div id="form-organization">
    <div class="col-md-12">
      <%= f.error_notification %>
    </div>
    <div class="form-group">
	  <%= f.input :name %>
    </div>
    <div class="form-group">
  	  <div>
  	    <label class="control-label " for="organization_form_id">Organzation Form</label>
  	  </div>
      <%= f.collection_select :organization_form_id, OrganizationForm.all, :id, :name %>
    </div>
    <div class="form-group">
  	  <div>
  	    <label class="control-label " for="organization_form_id">Taxation Form</label>
  	  </div>
      <div>
        <%= f.collection_select :taxation_form_id, TaxationForm.all, :id, :name %>
      </div>
    </div>
    <div class="text-center">
      <%= link_to 'Back', organizations_path, class: "btn btn-success" %>
      <%= f.button :submit, class: "btn-primary" %>
    </div>
  </div>
<% end %>
