<% if user_signed_in? %>

<div class="dropdown">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    <%= t :profile %>
  </button>
  <div class="dropdown-menu" style="right:0; left: auto">

      <li class="nav-link"><%= link_to("#{t :edit}", edit_user_registration_path) %></li>
      <li class="nav-link"><%= link_to("#{t :logout}", destroy_user_session_path, method: :delete) %></li>

<% else %>

      <li class="navbar-text"><%= t :have_account?%></li>
      <li class="nav-link"><%= link_to("#{t :login}", new_user_session_path)  %></li>
      <li class="nav-link"><%= link_to("#{t :signup}", new_user_registration_path)  %></li>

<% end %>
