<div class="container">
  <div class="offset-md-2 col-md-9">
    <div class= "table_form">
    <h1 class="text-center">Assistant to create organization</h1>
      <%= form_tag survey_index_path do %>

        <div class="form-group row">
          <p class="col-md-7">Choose activity type for organization you want to create</p>
          <%= select_tag :activity_type_id, options_from_collection_for_select(ActivityType.all, :id, :name) %>
        </div>

        <div class="form-group row">
          <p class="col-md-8">How many worker number do you want to hire (including yourself)?</p>
          <div class="col-md-4">
            <%= number_field_tag :workers_number, 1, min: 1 %>
          </div>
        </div>


        <div class="form-group row">
          <p class="col-md-8">Do you want to work with overseas companies?</p>
          <div class="col-md-4">
            <%= check_box_tag :work_abroad, 1, false %>
          </div>
        </div>

        <div class="form-group row">
          <p class="col-md-8">What is your approximate profit in belarusian roubles?</p>
          <div class="col-md-2">
            <%= number_field_tag :profit, 0, min: 0 %>
          </div>
        </div>

        <div class="form-group">
          <%= submit_tag "#{t :get_organization}"%>
        </div>

      <% end %>
    </div>
  </div>
</div>
