<div class="container">
  <div class="col-md-5 col-md-offset-3">
    <h1 class="text-center">Editing Organization</h1>
    <%= simple_form_for(@task.becomes(Task)) do |f| %>
      <div id="form-organization">
        <div class="col-md-12">
          <%= f.error_notification %>
        </div>
        <div class="form-group">
          <%= f.input :date %>
        </div>
        <div class="text-center">
          <%= link_to "#{t :back}", tasks_path, class: 'btn btn-success' %>
          <%= f.button :submit, class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
