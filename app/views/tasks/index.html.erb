<div class="container">
  <div class="col-md-12">
    <h1 class="text-center">Tasks</h1>
  </div>

  <% if @tasks.present? %>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Event type</th>
            <th>Event period</th>
            <th>Event date</th>
            <th>Description</th>
          </tr>
        </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
            <td class="col-md-3"><%= "#{task.event_type}" %></td>
            <td class="col-md-3"><%= "c #{task.event_period.first.to_formatted_s(:rfc822)} по #{task.event_period.last.to_formatted_s(:rfc822)}" %></td>
            <td class="col-md-3"><%= task.event_date %></td>
            <td class="col-md-3"><%= "#{task.description}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <% else %>
    <div class="col-md-12 text-center">First you need to add an organization</div>
  <% end %>
</div>

